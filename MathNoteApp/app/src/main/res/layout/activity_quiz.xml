<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingTop="16dp"
    android:paddingRight="10dp"
    android:weightSum="10"
    android:paddingBottom="10dp"
    tools:context=".activity.QuizActivity">

    <LinearLayout
        android:id="@+id/progress_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/quiz_close_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_action_close" />


        <ProgressBar
            android:id="@+id/quiz_pb"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp" />

    </LinearLayout>

    <WebView
        android:id="@+id/quiz_content_wv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="9.1"
        android:layout_marginBottom="15dp" />

    <Button
        android:id="@+id/answer_btn_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/answer_btn_2"
        android:layout_marginBottom="10dp"
        android:layout_weight="0.2"
        android:background="@drawable/quiz_button"
        android:text="A"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold" />

    <Button
        android:id="@+id/answer_btn_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/answer_btn_3"
        android:layout_marginBottom="10dp"
        android:layout_weight="0.2"
        android:background="@drawable/quiz_button"
        android:text="B"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold" />

    <Button
        android:id="@+id/answer_btn_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/answer_btn_4"
        android:layout_weight="0.2"
        android:layout_marginBottom="10dp"
        android:background="@drawable/quiz_button"
        android:text="C"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold" />

    <Button
        android:id="@+id/answer_btn_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/quiz_button"
        android:layout_weight="0.2"
        android:text="D"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold" />

</LinearLayout>