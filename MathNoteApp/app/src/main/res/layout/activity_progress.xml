<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ProgressActivity"
    android:background="@color/colorPrimary"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <ImageView
        android:id="@+id/logo2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/notebook_splash_white"/>

    <ProgressBar
        android:id="@+id/update_data_pb"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/logo2"
        android:layout_marginTop="70dp"/>

    <TextView
        android:id="@+id/update_data_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Loading data"
        android:textColor="@color/colorWhite"
       android:textAlignment="center"
        android:fontFamily="@font/play_regular"
        android:textSize="16sp"
        android:layout_below="@+id/update_data_pb"/>
</RelativeLayout>