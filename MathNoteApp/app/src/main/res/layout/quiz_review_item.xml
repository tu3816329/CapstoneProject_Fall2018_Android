<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_weight=".9"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight=".95"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/custom_border_shadow"
        android:orientation="vertical">

        <WebView
            android:id="@+id/quiz_review_wv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp" />

        <RelativeLayout
            android:id="@+id/is_correct_container"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/quiz_review_wv"
            android:background="#25db46"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp">

            <ImageView
                android:id="@+id/is_correct_iv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/is_correct_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@id/is_correct_iv"
                android:fontFamily="@font/play_regular"
                android:gravity="center_vertical"
                android:text="Đúng"
                android:textColor="@color/colorWhite"
                android:textSize="18dp" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>